{
  "name": "@m-doc/cose",
  "version": "0.0.1",
  "description": "mdl implementation in typescript",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "rm -rf **/dist && tsup",
    "lint": "biome lint ./src",
    "test": "pnpm run test:node && pnpm run test:browser && pnpm run test:cov",
    "test:node": "vitest run ./src/test/*.spec.ts",
    "test:browser": "vitest run ./src/test/*.spec.ts --environment jsdom",
    "test:cov": "vitest run --coverage"
  },
  "keywords": [
    "mdl",
    "mdoc",
    "cose"
  ],
  "engines": {
    "node": ">=16"
  },
  "author": "Lukas.J.Han <lukas.j.han@gmail.com>",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "tsup": {
    "entry": [
      "./src/index.ts"
    ],
    "sourceMap": true,
    "splitting": false,
    "clean": true,
    "dts": true,
    "format": [
      "cjs",
      "esm"
    ]
  },
  "dependencies": {
    "@m-doc/cbor": "workspace:*",
    "@panva/hkdf": "^1.2.1",
    "js-base64": "^3.7.7"
  }
}
